<style>
  .link {
    text-align:right;
  }
  
</style>

<p id="notice"><%= notice %></p>


<div class="container">
<h1 style="text-align: center;">릴레이 파트너 찾기</h1>

<div class="well">
<table class="table table-fit">
  <thead>
    <tr>
      <th>Title</th>
      <th>글쓴이</th>
      <th>댓글개수</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= post.user.email %></td>
        <td><%= post.comments.count%></td>
     
      </tr>
    <% end %>
  </tbody>
</table>



<br>
 <div class ="link">
  <%= link_to '글쓰기', new_post_path %> |
  <%= link_to '로그아웃', destroy_user_session_path %> |
  <%= link_to '마이페이지', '/mypage' %>
  </div>
</div>
</div>
